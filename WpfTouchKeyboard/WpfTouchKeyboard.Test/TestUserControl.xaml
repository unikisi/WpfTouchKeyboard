<UserControl x:Class="WpfTouchKeyboard.Test.TestUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:keyboard="clr-namespace:WpfTouchKeyboard.Managers;assembly=WpfTouchKeyboard"
             keyboard:KeyboardManager.EnableKeyboardForView="True">
  <StackPanel Margin="20">
    <TextBlock Text="这是 UserControl 测试区域" 
               FontSize="16" 
               FontWeight="Bold" 
               Margin="0,0,0,10"/>
    
    <TextBlock Text="UserControl 已设置 EnableKeyboardForView=True" 
               Foreground="Green"
               Margin="0,0,0,10"/>
    
    <TextBlock Text="UserControl 中的 TextBox（应该显示虚拟键盘）" 
               Margin="0,10,0,5" 
               FontWeight="Bold"/>
    <TextBox Height="30" 
             Margin="0,0,0,20" 
             Text="点击这里测试虚拟键盘"/>
    
    <TextBlock Text="UserControl 中的 PasswordBox（应该显示虚拟键盘）" 
               Margin="0,0,0,5" 
               FontWeight="Bold"/>
    <PasswordBox Height="30" 
                 Margin="0,0,0,20"/>
    
    <TextBlock Text="禁用了虚拟键盘的 TextBox（EnableKeyboard=False）" 
               Margin="0,0,0,5" 
               FontWeight="Bold"/>
    <TextBox Height="30" 
             keyboard:KeyboardManager.EnableKeyboard="False" 
             Text="这个不会显示虚拟键盘"/>
  </StackPanel>
</UserControl>


