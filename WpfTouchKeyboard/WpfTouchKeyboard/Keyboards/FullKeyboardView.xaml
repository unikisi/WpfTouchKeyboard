<UserControl x:Class="WpfTouchKeyboard.Keyboards.FullKeyboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/WpfTouchKeyboard;component/Styles/KeyboardStyle.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>

  <StackPanel Orientation="Vertical" Margin="0">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button Content="`" Tag="`" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click" Name="BacktickButton"/>
      <Button Content="1" Tag="1" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="2" Tag="2" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="3" Tag="3" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="4" Tag="4" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="5" Tag="5" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="6" Tag="6" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="7" Tag="7" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="8" Tag="8" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="9" Tag="9" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="0" Tag="0" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="-" Tag="-" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="=" Tag="=" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="delete" Tag="Back" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click" MinWidth="90"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button Content="Tab" Tag="Tab" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click" MinWidth="90"/>
      <Button Content="Q" Tag="Q" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="W" Tag="W" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="E" Tag="E" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="R" Tag="R" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="T" Tag="T" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="Y" Tag="Y" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="U" Tag="U" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="I" Tag="I" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="O" Tag="O" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="P" Tag="P" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="[" Tag="[" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="]" Tag="]" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="\" Tag='\' Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button Content="caps lock" Tag="CapsLock" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click" Name="CapsButton" MinWidth="105"/>
      <Button Content="A" Tag="A" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="S" Tag="S" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="D" Tag="D" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="F" Tag="F" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="G" Tag="G" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="H" Tag="H" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="J" Tag="J" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="K" Tag="K" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="L" Tag="L" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content=";" Tag=";" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="'" Tag="'" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="return" Tag="Enter" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click" MinWidth="110" FontSize="24"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button Content="shift" Tag="Shift" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click" Name="ShiftButton" MinWidth="190"/>
      <Button Content="Z" Tag="Z" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="X" Tag="X" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="C" Tag="C" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="V" Tag="V" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="B" Tag="B" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="N" Tag="N" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="M" Tag="M" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="," Tag="," Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="." Tag="." Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button Content="/" Tag="/" Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click"/>
      <Button x:Name="LanguageToggleButton" 
              Content="英" 
              Click="LanguageToggle_Click"
              Style="{StaticResource VirtualKeyButtonStyle}"
              MinWidth="90"
              Focusable="False"/>
    </StackPanel>

    <Button Content="␣" Tag=" " Style="{StaticResource VirtualKeyButtonStyle}" Click="Key_Click" HorizontalAlignment="Stretch" Margin="2"/>
  </StackPanel>
</UserControl>
